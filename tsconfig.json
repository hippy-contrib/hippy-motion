{
  "exclude": ["node_modules", "lib", "__tests__"],
  "include": ["./src"],
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["esnext", "dom"],
    "jsx": "react" /* Specify JSX code generation: 'preserve', 'react-native', or 'react'. */,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "downlevelIteration": true,
    // "skipLibCheck": true,
    // "typeRoots": ["./node_modules/@types", "./types"],
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "paths": {
      "@tencent/hippy-react": ["./node_modules/@tencent/types-hippy-react"]
      // "@tencent/kg-ui": ["packages/kg-ui-base/src"]
    }
  }
}
